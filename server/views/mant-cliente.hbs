
    <title>Mantenimiento de Clientes</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <div class="d-flex flex-column min-vh-100">
        <header class="sticky-top bg-white border-bottom">
            <nav aria-label="breadcrumb" class="container">
                <ol class="breadcrumb my-2">
                    <li class="breadcrumb-item"><a href="index.handlebars">Inicio</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Mantenimiento de Clientes</li>
                </ol>
            </nav>
        </header>
        <main class="flex-grow-1 container my-4">
            <div class="row g-4">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h3 class="card-title">Mantenimiento de Clientes</h3>
                            <p class="card-text">Gestiona la información de los clientes</p>
                            <form id="clientes-form" class="row g-3" action="/mant-cliente" method="POST">
                                <div class="col-md-6">
                                    <label for="id_cliente" class="form-label">ID Cliente</label>
                                    <input type="number" class="form-control" id="id_cliente" name="id_cliente">
                                </div>
                                <div class="col-md-6">
                                    <label for="id_tercero" class="form-label">ID Tercero</label>
                                    <input type="number" class="form-control" id="id_tercero" name="id_tercero">
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" name="email">
                                </div>
                                <div class="col-md-6">
                                    <label for="fecha_registro" class="form-label">Fecha de Registro</label>
                                    <input type="date" class="form-control" id="fecha_registro" name="fecha_registro">
                                </div>
                                <div class="col-12 d-flex justify-content-end" style="margin-top: 20px;">
                                    <button type="button" class="btn btn-secondary me-2">Cancelar</button>
                                    <button type="submit" id="guardar" class="btn btn-primary">
                                        <i class="fas fa-bookmark"></i> Guardar
                                    </button>
                                    <button type="button" id="modificar" class="btn btn-warning d-none">Modificar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="container my-4">
                            <h1>Lista de Clientes</h1>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID Cliente</th>
                                        <th>ID Tercero</th>
                                        <th>Email</th>
                                        <th>Fecha de Registro</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each clientes}}
                                    <tr class="clickable-row" 
                                        data-id_cliente="{{this.id_cliente}}" 
                                        data-id_tercero="{{this.id_tercero}}" 
                                        data-email="{{this.email}}" 
                                        data-fecha_registro="{{this.fecha_registro}}">
                                        <td>{{this.id_cliente}}</td>
                                        <td>{{this.id_tercero}}</td>
                                        <td>{{this.email}}</td>
                                        <td>{{this.fecha_registro}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const rows = document.querySelectorAll('.clickable-row');
            const modificarButton = document.getElementById('modificar');
            const guardarButton = document.getElementById('guardar');
            const form = document.getElementById('clientes-form');
            let isModifying = false;

            function clearForm() {
                form.reset();
            }

            rows.forEach(row => {
                row.addEventListener('click', function () {
                    const id_cliente = this.getAttribute('data-id_cliente');
                    const id_tercero = this.getAttribute('data-id_tercero');
                    const email = this.getAttribute('data-email');
                    const fecha_registro = this.getAttribute('data-fecha_registro');
                    document.getElementById('id_cliente').value = id_cliente;
                    document.getElementById('id_tercero').value = id_tercero;
                    document.getElementById('email').value = email;
                    document.getElementById('fecha_registro').value = fecha_registro;

                    guardarButton.classList.add('d-none');
                    modificarButton.classList.remove('d-none');
                });
            });

            modificarButton.addEventListener('click', function () {
                isModifying = !isModifying;
                modificarButton.classList.add('d-none');
                guardarButton.classList.remove('d-none');
                clearForm();
            });

            form.addEventListener('submit', function (event) {
                event.preventDefault();
                // Aquí puedes agregar la lógica para enviar el formulario
                clearForm();
                guardarButton.classList.remove('d-none');
                modificarButton.classList.add('d-none');
            });
        });
    </script>

