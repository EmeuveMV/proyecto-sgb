<section>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <div class="d-flex flex-column min-vh-100">
        <header class="sticky-top bg-white border-bottom">
            <nav aria-label="breadcrumb" class="container">
                <ol class="breadcrumb my-2">
                    <li class="breadcrumb-item"><a href="index.handlebars">Inicio</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Mantenimiento de Empleados</li>
                </ol>
            </nav>
        </header>
        <main class="flex-grow-1 container my-4">
            <div class="row g-4">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h3 class="card-title">Mantenimiento de Empleados</h3>
                            <p class="card-text">Gestiona la información de los empleados</p>
                            <form class="row g-3"  action="/mant-empleado" method="POST">
                                <div hidden class="col-md-6">
                                    <label for="id_empleado" class="form-label">ID Empleado</label>
                                    <input type="hidden" class="form-control" id="id_empleado">
                                </div>
                                <div class="col-md-6">
                                    <label for="id_cargo" class="form-label">ID Cargo</label>
                                    <input type="number" class="form-control" id="id_cargo">
                                </div>
                                <div class="col-md-6">
                                    <label for="id_tercero" class="form-label">ID Tercero</label>
                                    <input type="number" class="form-control" id="id_tercero">
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email">
                                </div>
                                <div class="col-md-6">
                                    <label for="fecha_contratacion" class="form-label">Fecha de Contratación</label>
                                    <input type="date" class="form-control" id="fecha_contratacion">
                                </div>
                                <div class="col-md-6">
                                    <label for="direccion" class="form-label">Dirección</label>
                                    <input type="text" class="form-control" id="direccion">
                                </div>
                                <div class="col-md-6">
                                    <label for="fecha_nacimiento" class="form-label">Fecha de Nacimiento</label>
                                    <input type="date" class="form-control" id="fecha_nacimiento">
                                </div>
                                <div class="col-md-6">
                                    <label for="genero" class="form-label">Género</label>
                                    <input type="text" class="form-control" id="genero">
                                </div>
                                <div class="col-12 d-flex justify-content-end" style="margin-top: 20px;">
                                    <button type="button" class="btn btn-secondary me-2">Cancelar</button>
                                    <button type="submit" class="btn btn-primary">Guardar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="card shadow-sm">
                       <div class="container my-4">
                           <h1>Lista de Empleados</h1>
                           <table class="table table-striped">
                               <thead>
                                   <tr>
                                       <th>ID Empleado</th>
                                       <th>ID Cargo</th>
                                       <th>ID Tercero</th>
                                       <th>Email</th>
                                       <th>Fecha de Contratación</th>
                                       <th>Dirección</th>
                                       <th>Fecha de Nacimiento</th>
                                       <th>Género</th>
                                   </tr>
                               </thead>
                               <tbody>
                                   {{#each empleados}}
                                   <tr class="clickable-row" 
                                       data-id_empleado="{{this.id_empleado}}" 
                                       data-id_cargo="{{this.id_cargo}}" 
                                       data-id_tercero="{{this.id_tercero}}" 
                                       data-email="{{this.email}}" 
                                       data-fecha_contratacion="{{this.fecha_contratacion}}" 
                                       data-direccion="{{this.direccion}}" 
                                       data-fecha_nacimiento="{{this.fecha_nacimiento}}" 
                                       data-genero="{{this.genero}}">
                                       <td>{{this.id_empleado}}</td>
                                       <td>{{this.id_cargo}}</td>
                                       <td>{{this.id_tercero}}</td>
                                       <td>{{this.email}}</td>
                                       <td>{{this.fecha_contratacion}}</td>
                                       <td>{{this.direccion}}</td>
                                       <td>{{this.fecha_nacimiento}}</td>
                                       <td>{{this.genero}}</td>
                                   </tr>
                                   {{/each}}
                               </tbody>
                           </table>
                       </div>
                       <script>
                           document.addEventListener('DOMContentLoaded', function () {
                               const rows = document.querySelectorAll('.clickable-row');
                               rows.forEach(row => {
                                   row.addEventListener('click', function () {
                                       const id_empleado = this.getAttribute('data-id_empleado');
                                       const id_cargo = this.getAttribute('data-id_cargo');
                                       const id_tercero = this.getAttribute('data-id_tercero');
                                       const email = this.getAttribute('data-email');
                                       const fecha_contratacion = this.getAttribute('data-fecha_contratacion');
                                       const direccion = this.getAttribute('data-direccion');
                                       const fecha_nacimiento = this.getAttribute('data-fecha_nacimiento');
                                       const genero = this.getAttribute('data-genero');
                                       document.getElementById('id_empleado').value = id_empleado;
                                       document.getElementById('id_cargo').value = id_cargo;
                                       document.getElementById('id_tercero').value = id_tercero;
                                       document.getElementById('email').value = email;
                                       document.getElementById('fecha_contratacion').value = fecha_contratacion;
                                       document.getElementById('direccion').value = direccion;
                                       document.getElementById('fecha_nacimiento').value = fecha_nacimiento;
                                       document.getElementById('genero').value = genero;
                                   });
                               });
                           });
                       </script>
                   </div>
                </div>
            </div>
        </main>
    </div>
</section>
